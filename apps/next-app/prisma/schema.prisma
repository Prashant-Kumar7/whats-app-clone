generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {        
  id                String        @id @default(uuid())
  email             String        @unique
  password          String
  profile           Profile[]
  createdOn         DateTime      @default(now())
}

model Profile {
  id              String    @id @default(uuid())
  name            String
  username        String    @unique
  userId          String    @unique
  user            User      @relation(fields: [userId] , references: [id])
  profilePic      String
  chatList        DmList[]
}


model DmList{
  id              String        @id @default(uuid())
  userName        String            
  profileId       String
  profile         Profile       @relation(fields: [profileId] , references: [id])
  chats           Chats[]
}


model Chats{
  id              String        @id @default(uuid())
  message         String  
  dateTime        DateTime      @default(now())
  dmId            String
  dmList          DmList       @relation(fields: [dmId] , references: [id])
}